{"ast":null,"code":"import Modal from \"../../components/common/TodoModal.vue\";\nexport default {\n  components: {\n    Modal: Modal\n  },\n\n  data() {\n    return {\n      newTodoItem: '',\n      showModal: false\n    };\n  },\n\n  methods: {\n    addTodo() {\n      if (this.newTodoItem !== \"\") {\n        let value = this.newTodoItem && this.newTodoItem.trim();\n        this.$emit('addTodo', value);\n        this.clearInput();\n      } else {\n        this.showModal = !this.showModal;\n      }\n    },\n\n    clearInput() {\n      this.newTodoItem = '';\n    },\n\n    test() {\n      console.log('hi');\n    }\n\n  }\n};","map":{"version":3,"mappings":"AA6BA,OAAOA,KAAP,MAAkB,uCAAlB;AAEA,eAAe;EACbC,UAAU,EAAE;IACVD,KAAI,EAAIA;EADE,CADC;;EAIbE,IAAI,GAAG;IACL,OAAO;MACLC,WAAU,EAAI,EADT;MAELC,SAAQ,EAAI;IAFP,CAAP;EAID,CATY;;EAUbC,OAAO,EAAE;IACPC,OAAO,GAAG;MAER,IAAK,KAAKH,WAAL,KAAqB,EAA1B,EAA+B;QAC7B,IAAII,KAAI,GAAI,KAAKJ,WAAL,IAAoB,KAAKA,WAAL,CAAiBK,IAAjB,EAAhC;QACA,KAAKC,KAAL,CAAW,SAAX,EAAsBF,KAAtB;QACA,KAAKG,UAAL;MACF,CAJA,MAIO;QACL,KAAKN,SAAL,GAAiB,CAAC,KAAKA,SAAvB;MACF;IAED,CAXM;;IAYPM,UAAU,GAAG;MACX,KAAKP,WAAL,GAAmB,EAAnB;IACD,CAdM;;IAePQ,IAAI,GAAG;MACLC,OAAO,CAACC,GAAR,CAAY,IAAZ;IACF;;EAjBO;AAVI,CAAf","names":["Modal","components","data","newTodoItem","showModal","methods","addTodo","value","trim","$emit","clearInput","test","console","log"],"sourceRoot":"","sources":["/Users/kdw/Documents/todo/todo-front/src/components/todo-core/TodoInput.vue"],"sourcesContent":["<template>\n  <div class=\"inputBox shadow\">\n    <input type=\"text\"\n      v-model=\"newTodoItem\"\n      placeholder=\"Type what you have to do\"\n      v-on:keyup.enter=\"addTodo\"\n    >\n    <span class=\"addContainer\" v-on:click=\"addTodo\">\n      <i class=\"addBtn fas fa-plus\" aria-hidden=\"true\"></i>\n    </span>\n\n    <Modal @close=\"showModal = false\">\n      <template #header>\n        <div class=\"modalClose\">\n          <i class=\"closeModalBtn fas fa-times\" aria-hidden=\"true\"></i>\n        </div>\n        <h1>경고</h1>\n      </template>\n      <template #footer>\n        <span @click=\"test\">\n          할 일을 입력하세요.\n        </span>\n      </template>\n    </Modal>\n\n  </div>\n</template>\n\n<script>\nimport Modal from \"../../components/common/TodoModal.vue\"\n\nexport default {\n  components: {\n    Modal : Modal\n  },\n  data() {\n    return {\n      newTodoItem : '',\n      showModal : false\n    }\n  },\n  methods: {\n    addTodo() {\n\n      if ( this.newTodoItem !== \"\" ) {\n        let value = this.newTodoItem && this.newTodoItem.trim();\n        this.$emit('addTodo', value);\n        this.clearInput();\n      } else {\n        this.showModal = !this.showModal;\n      }\n\n    },\n    clearInput() {\n      this.newTodoItem = '';\n    },\n    test() {\n      console.log('hi')\n    }\n  }\n}\n</script>\n\n<style lang=\"scss\" scoped>\n  input:focus {\n    outline: none;\n  }\n\n  .inputBox {\n    background-color: white;\n    height: 50px;\n    line-height: 50px;\n    border-radius: 5px;\n\n    & input {\n      border-style: none;\n      font-size: 0.9rem;\n    }\n  }\n\n  .addContainer {\n    float: right;\n    background: linear-gradient(to right, #6478FB, #8763FB);\n    display: block;\n    width: 3rem;\n    border-radius: 0 5px 5px 0;\n\n    & .addBtn {\n      color: white;\n      vertical-align: middle;\n    }\n  }\n\n  .modalClose {\n    position: absolute;\n    font-size: 1.4rem;\n\n  }\n\n\n</style>\n"]},"metadata":{},"sourceType":"module"}