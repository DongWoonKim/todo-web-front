{"ast":null,"code":"import Modal from \"../../components/common/TodoModal.vue\";\nexport default {\n  components: {\n    Modal: Modal\n  },\n\n  data() {\n    return {\n      newTodoItem: '',\n      showModal: false\n    };\n  },\n\n  methods: {\n    addTodo() {\n      if (this.newTodoItem !== \"\") {\n        let value = this.newTodoItem && this.newTodoItem.trim();\n        this.$emit('addTodo', value);\n        this.clearInput();\n      } else {\n        this.toggleModal();\n      }\n    },\n\n    clearInput() {\n      this.newTodoItem = '';\n    },\n\n    toggleModal() {\n      this.showModal = !this.showModal;\n    }\n\n  }\n};","map":{"version":3,"mappings":"AAmCA,OAAOA,KAAP,MAAkB,uCAAlB;AAEA,eAAe;EACbC,UAAU,EAAE;IACVD,KAAI,EAAIA;EADE,CADC;;EAIbE,IAAI,GAAG;IACL,OAAO;MACLC,WAAU,EAAI,EADT;MAELC,SAAQ,EAAI;IAFP,CAAP;EAID,CATY;;EAUbC,OAAO,EAAE;IACPC,OAAO,GAAG;MAER,IAAK,KAAKH,WAAL,KAAqB,EAA1B,EAA+B;QAC7B,IAAII,KAAI,GAAI,KAAKJ,WAAL,IAAoB,KAAKA,WAAL,CAAiBK,IAAjB,EAAhC;QACA,KAAKC,KAAL,CAAW,SAAX,EAAsBF,KAAtB;QACA,KAAKG,UAAL;MACF,CAJA,MAIO;QACL,KAAKC,WAAL;MACF;IAED,CAXM;;IAYPD,UAAU,GAAG;MACX,KAAKP,WAAL,GAAmB,EAAnB;IACD,CAdM;;IAePQ,WAAW,GAAG;MACZ,KAAKP,SAAL,GAAiB,CAAC,KAAKA,SAAvB;IACF;;EAjBO;AAVI,CAAf","names":["Modal","components","data","newTodoItem","showModal","methods","addTodo","value","trim","$emit","clearInput","toggleModal"],"sourceRoot":"","sources":["/Users/kdw/Documents/todo/todo-front/src/components/todo-core/TodoInput.vue"],"sourcesContent":["<template>\n  <div class=\"inputBox shadow\">\n    <input type=\"text\"\n      v-model=\"newTodoItem\"\n      placeholder=\"오늘은 뭐할까?\"\n      @keypress.enter=\"addTodo\"\n      style=\"font-size: 2rem;\"\n    >\n    <span class=\"addContainer\" v-on:click=\"addTodo\">\n      <i class=\"addBtn fas fa-plus\" aria-hidden=\"true\"></i>\n    </span>\n\n    <Modal v-if=\"showModal\">\n      <template #header>\n        <div class=\"modalClose\" >\n          <i\n          class=\"closeModalBtn fas fa-times\"\n          aria-hidden=\"true\"\n          @click=\"toggleModal\"\n          style=\"font-size:2rem;\"\n          ></i>\n        </div>\n        <h1>경고</h1>\n      </template>\n      <template #footer>\n        <span>\n          할 일을 입력하세요.\n        </span>\n      </template>\n    </Modal>\n\n  </div>\n</template>\n\n<script>\nimport Modal from \"../../components/common/TodoModal.vue\"\n\nexport default {\n  components: {\n    Modal : Modal\n  },\n  data() {\n    return {\n      newTodoItem : '',\n      showModal : false\n    }\n  },\n  methods: {\n    addTodo() {\n\n      if ( this.newTodoItem !== \"\" ) {\n        let value = this.newTodoItem && this.newTodoItem.trim();\n        this.$emit('addTodo', value);\n        this.clearInput();\n      } else {\n        this.toggleModal();\n      }\n\n    },\n    clearInput() {\n      this.newTodoItem = '';\n    },\n    toggleModal() {\n      this.showModal = !this.showModal;\n    }\n  }\n}\n</script>\n\n<style lang=\"scss\" scoped>\n  input:focus {\n    outline: none;\n  }\n\n  .inputBox {\n    background-color: white;\n    height: 55px;\n    line-height: 50px;\n    border-radius: 5px;\n\n    & input {\n      border-style: none;\n      font-size: 0.9rem;\n    }\n  }\n\n  .addContainer {\n    float: right;\n    background: linear-gradient(to right, #AC99F2, #A7BAF2);\n    display: block;\n    width: 3rem;\n    border-radius: 0 5px 5px 0;\n    height: 55px;\n\n    & .addBtn {\n      color: white;\n      vertical-align: middle;\n    }\n  }\n\n</style>\n"]},"metadata":{},"sourceType":"module"}